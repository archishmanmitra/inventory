generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  EMPLOYEE
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(EMPLOYEE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  invoices        Invoice[]
  purchaseOrders  PurchaseOrder[]

  @@map("users")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  barcode     String?  @unique
  price       Float
  cost        Float
  stock       Int      @default(0)
  unit        String   @default("pcs")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  invoiceItems      InvoiceItem[]
  purchaseOrderItems PurchaseOrderItem[]

  @@map("products")
}

model Invoice {
  id                    String   @id @default(cuid())
  invoiceNumber         String?   @unique
  userId                String
  
  // Tax Invoice Details (Left Box 1)
  taxInvNo              String?
  taxInvDate            DateTime?
  chalanNo              String?
  chalanDate            DateTime?
  orderNo               String?
  orderDate             DateTime?
  paymentTerm           String?
  dueOn                 DateTime?
  brokerName            String?
  
  // IRN (between boxes)
  irn                   String?
  
  // Billed To (Left Box 2)
  billedToName          String?
  billedToAddress       String?
  billedToState         String?
  billedToGSTIN         String?
  billedToPANo          String?
  
  // Transporter Details (Right Box 1)
  transporterName       String?
  lrNo                  String?
  lrDate                DateTime?
  vehicleNo             String?
  placeOfSupply         String?
  from                  String?
  to                    String?
  noOfBoxes             String?
  
  // ACK No (Right)
  ackNo                 String?
  
  // Shipped To (Right Box 2)
  shippedToName         String?
  shippedToAddress      String?
  shippedToState        String?
  shippedToGSTIN        String?
  shippedToPANo         String?
  
  // Product Details Flags
  discountEnabled       Boolean  @default(false)
  discountRate          Float    @default(0)
  igstEnabled           Boolean  @default(false)
  igstRate              Float    @default(18)
  sgstEnabled           Boolean  @default(false)
  sgstRate              Float    @default(9)
  cgstEnabled           Boolean  @default(false)
  cgstRate              Float    @default(9)
  
  // Bank Details
  bankDetails           String?
  branch                String?
  rtgsNeftIfscCode      String?
  
  // Terms & Conditions
  termsAndConditions    String?
  
  // Totals
  totalAmount           Float?
  discountAmount        Float?  @default(0)
  sgstAmount            Float?   @default(0)
  cgstAmount            Float?   @default(0)
  igstAmount            Float?   @default(0)
  netAmount             Float?
  status                String   @default("pending")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user  User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  items InvoiceItem[]

  @@map("invoices")
}

model InvoiceItem {
  id              String   @id @default(cuid())
  invoiceId       String
  productId       String
  quantity        Int
  price           Float
  subtotal        Float
  description     String?
  hsnCode         String?
  per             String?  @default("pcs")
  createdAt       DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("invoice_items")
}

model PurchaseOrder {
  id                    String   @id @default(cuid())
  orderNumber           String   @unique
  userId                String
  
  // Purchase Order Details
  poDate                DateTime?
  gstNo                 String?
  
  // Shipment Address (Company Details)
  shipmentName          String?
  shipmentAddress       String?
  shipmentState         String?
  shipmentPhone         String?
  
  // Vendor Address (Supplier Details)
  supplierName          String?
  supplierAddress       String?
  supplierState         String?
  supplierGSTNo         String?
  supplierPhone         String?
  supplierEmail         String?
  supplierContactPerson String?
  
  // Product Details Flags
  discountEnabled       Boolean?  @default(false)
  discountRate          Float?    @default(0)
  cgstEnabled           Boolean?  @default(false)
  cgstRate              Float?    @default(9)
  sgstEnabled           Boolean?  @default(false)
  sgstRate              Float?    @default(9)
  igstEnabled           Boolean?  @default(false)
  igstRate              Float?    @default(18)
  
  // Totals
  totalAmount           Float?
  discountAmount        Float?   @default(0)
  cgstAmount            Float?   @default(0)
  sgstAmount            Float?   @default(0)
  igstAmount            Float?   @default(0)
  netAmount             Float?
  amountInWords         String?
  
  // Payment & Delivery Terms
  paymentTerms          String?
  delivery              String?
  
  // Special Terms and Conditions
  termsAndConditions    String?
  
  status                String   @default("pending")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user  User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  items PurchaseOrderItem[]

  @@map("purchase_orders")
}

model PurchaseOrderItem {
  id                String   @id @default(cuid())
  purchaseOrderId   String
  productId         String
  
  // Item Details
  itemDescription   String?
  hsnCode           String?
  quantity          Int
  discount          Float?   @default(0)
  rate              Float?
  value             Float?
  per               String?  @default("pcs")
  
  createdAt         DateTime @default(now())

  purchaseOrder PurchaseOrder @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  product       Product       @relation(fields: [productId], references: [id])

  @@map("purchase_order_items")
}

